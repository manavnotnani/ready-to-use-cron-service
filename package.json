{
  "name": "backend",
  "version": "2.0.10",
  "main": "./build/index.js",
  "description": "This is micro service project of issuer related actions(Properties)",
  "author": "Manav <antiersolutions>",
  "scripts": {
    "start": "echo \"Running with '${NODE_ENV}' mode\" && node ./build/config/server/index.js",
    "dev:start": "NODE_ENV=dev nodemon ./src/server.ts",
    "qa": "NODE_ENV=qa npm start",
    "stage": "NODE_ENV=stage npm start",
    "production": "NODE_ENV=production npm start",
    "uat": "NODE_ENV=uat npm start",
    "ts:watch": "tsc -w",
    "copy_env": "echo \"Copying dependencies with '${NODE_ENV}' mode\" && cp .env.${NODE_ENV} ./build/",
    "copy_dep": "cp -R src/utils/ build/",
    "build": "npm run clean && echo \"Building with '${NODE_ENV}' mode\" && tsc --skipLibCheck && npm run copy_dep && npm run minify",
    "clean": "rm -rf ./build",
    "test": "NODE_ENV=test mocha -r ts-node/register test/index.js --exit",
    "lint": "eslint . --ext .ts",
    "minify": "npx minify-all-js ./build -j -m -M"
  },
  "files": [
    "src"
  ],
